<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantSuggestions</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>Semantic UI CDN</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
  </head>

  <body>
    <!-- Navigation -->
    <div class="ui menu">
      <div class="header item">
        Home
      </div>
      <a class="item" href="<%= restaurants_path %>">
        Restaurants
      </a>
      <% if logged_in? %>
          <a class="item" href="<%= search_path(@user) %>">
            Search
          </a>
      <% end %>


      <div class="right menu">
        <% if !logged_in? %>
          <a class="item" href="<%= login_path %>">
            Log In
          </a>
          <a class="item" href="<%= new_user_path %>">
            Sign Up
          </a>
        <% else %>
          <a class="item" href="<%= user_path(@user) %>">
            Profile
          </a>
        <div class="item"><%= link_to "Log out", logout_path, method: :delete %>
        </div>
        <% end %>
      </div>
    </div>

    <!-- End of Navigation -->

    <%= yield %>
  </body>
</html>
